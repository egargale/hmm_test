[tool:pytest]
# Test discovery
testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*

# Minimum version
minversion = 7.0

# Output options
addopts =
    -ra
    --strict-markers
    --strict-config
    --verbose
    --cov=src
    --cov-report=term-missing
    --cov-report=html:htmlcov
    --cov-report=xml
    --cov-fail-under=95
    --tb=short

# Markers for different test types
markers =
    slow: marks tests as slow (deselect with '-m "not slow"')
    integration: marks tests as integration tests
    unit: marks tests as unit tests
    e2e: marks tests as end-to-end tests
    cli: marks tests as CLI tests
    visualization: marks tests as visualization tests
    backtesting: marks tests as backtesting tests
    gpu: marks tests that require GPU
    benchmark: marks tests as benchmarks
    requires_internet: marks tests that require internet connection
    requires_data: marks tests that require test data files

# Filter warnings
filterwarnings =
    error
    ignore::UserWarning
    ignore::FutureWarning
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
    ignore::PydanticDeprecatedSince20
    ignore::PytestReturnNotNoneWarning

# Logging
log_cli = true
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)8s] %(name)s: %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S
